{{#extends 'base'}}
{{#block 'content'}}
<form method="POST">
    <div>
        <label for="" class='form-label'>Title</label>
        <input class='form-control' type="text" name="title" value="{{movieDetail.title}}"/>
    </div>
    <div>
        <label for="" class='form-label'>Plot</label>
        <input class='form-control' type="text" name="plot" value="{{movieDetail.plot}}"/>
    </div>
    <input type="submit" class='btn btn-success mt-3'>
</form>
{{/block}}
{{/extends}}